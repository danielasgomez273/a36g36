<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondodos"
    tools:context=".UserSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ingresa tus Datos"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="250dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:padding="20dp">


            <EditText
                android:id="@+id/signup_name"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_how_to_reg_24"
                android:drawablePadding="8dp"
                android:hint="Apellidos"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_last_name"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_how_to_reg_24"
                android:drawablePadding="8dp"
                android:hint="Nombres"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_age"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:drawablePadding="8dp"
                android:hint="Edad"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_birthdate"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_cake_24"
                android:drawablePadding="8dp"
                android:hint="Fecha de Nacimiento"
                android:padding="8dp" />


            <EditText
                android:id="@+id/signup_weight"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_monitor_weight_24"
                android:drawablePadding="8dp"
                android:hint="Peso (Kg)"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_diabetes_type"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_health_and_safety_24"
                android:drawablePadding="8dp"
                android:hint="Tipo de Diabetes"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_diabetes_therapy"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_vaccines_24"
                android:drawablePadding="8dp"
                android:hint="Terapia de insulina"
                android:padding="8dp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/blueonedrop"
                android:text="Registrarse"
                android:textSize="18sp"
                app:cornerRadius="30dp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>