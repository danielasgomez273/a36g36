<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoperfil"
    tools:context=".RegWeightActivity">


    <LinearLayout
        android:id="@+id/layout_view_reg_weight"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_reg_weight"
            android:layout_width="374dp"
            android:layout_height="272dp"
            android:layout_marginTop="40dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



    <Button
        android:id="@+id/btn_home_weight"
        android:layout_width="91dp"
        android:layout_height="52dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="@color/blueonedrop"
        android:onClick="toHome"
        android:text="home"
        app:layout_constraintBottom_toTopOf="@+id/layout_view_reg_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>