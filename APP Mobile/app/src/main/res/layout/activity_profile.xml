<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondoperfil"
    tools:context=".RegWeightActivity">

    <ScrollView
        android:layout_width="420dp"
        android:layout_height="865dp"
        android:background="@drawable/fondodos"
        android:orientation="vertical"
        android:padding="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".UserSignupActivity"
        tools:layout_editor_absoluteX="-5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_home_weight"
                android:layout_width="91dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/blueonedrop"
                android:onClick="toHome"
                android:text="home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:text="Ficha medica"
                android:textAlignment="center"
                android:textColor="@color/blueonedrop"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:padding="0dp">


                <EditText
                    android:id="@+id/signup_name"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_how_to_reg_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_last_name"
                    android:padding="0dp" />

                <EditText
                    android:id="@+id/signup_last_name"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_how_to_reg_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_name"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_age"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_numbers_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_age"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_birth"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_cake_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_birthday"
                    android:padding="8dp" />


                <EditText
                    android:id="@+id/signup_weight"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_monitor_weight_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_weight"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_db_type"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_health_and_safety_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_type_db"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_db_therapy"
                    android:layout_width="280dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_vaccines_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_therapy_db"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/edit_medical_data_button"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/blueonedrop"
                    android:text="Modificar datos"
                    android:textSize="18sp"
                    app:cornerRadius="30dp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>