<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fondosinlogo"
    tools:context=".RegWeightActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="Ficha medica"
            android:textAlignment="center"
            android:textColor="@color/blueonedrop"
            android:textSize="24sp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        tools:context=".UserSignupActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            

                <EditText
                    android:id="@+id/signup_name"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_how_to_reg_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_last_name"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_last_name"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_how_to_reg_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_name"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_age"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_numbers_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_age"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_birth"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_cake_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_birthday"
                    android:padding="8dp" />


                <EditText
                    android:id="@+id/signup_weight"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_monitor_weight_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_weight"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_db_type"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_health_and_safety_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_type_db"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/signup_db_therapy"
                    android:layout_width="301dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_vaccines_24"
                    android:drawablePadding="8dp"
                    android:hint="@string/f_m_therapy_db"
                    android:padding="8dp" />





        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/blueonedrop">

        <Button
            android:id="@+id/btn_home_weight"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blueonedrop"
            android:onClick="toHome"
            android:text="Volver"
            android:textSize="18sp"
            app:cornerRadius="30dp"/>


        <Button
            android:id="@+id/edit_medical_data_button"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/blueonedrop"
            android:text="Modificar datos"
            android:textSize="18sp"
            app:cornerRadius="30dp" />

    </LinearLayout>


</LinearLayout>