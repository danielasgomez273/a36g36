<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegGlyActivity">


    <!--  Contenedor del scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- ======================== -->
        <!--  Contenedor explicativo -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="70dp"
            android:background="@color/pinkonedrop2"
            >

            <!-- Titulo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/pinkonedrop">
                <TextView

                    android:id="@+id/textView2"
                    android:layout_marginVertical="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_crud_gly"
                    android:textSize="24sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!-- Descripcion -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginVertical="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/description_gly"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- ======================== -->

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/glyLineChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"/>



        <!-- Nuevo Registro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pinkonedrop2"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="@string/new_crud_gly"
                android:textSize="22sp"
                android:gravity="center"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_btn_add_reg_weight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clickable="true"
                app:backgroundTint="@color/white"
                app:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@android:drawable/ic_input_add"  />

        </LinearLayout>



        <!-- Historial Registro -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="40dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history_pressure"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/pinkonedrop2"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                android:text="@string/description_pressure_2"
                android:textColor="@color/blackonedrop"/>

        </LinearLayout>



        <!-- Registros -->
    <LinearLayout
        android:id="@+id/layout_view_reg_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_reg_weight"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_margin="10dp"
            android:paddingVertical="50dp"
            android:padding="10dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>





        </LinearLayout>
    </ScrollView>


    <!-- Menu de footer -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/blueonedrop"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_home_pressure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blueonedrop"
            android:onClick="toHome"
            android:text="Volver"/>
    </LinearLayout>







</LinearLayout>