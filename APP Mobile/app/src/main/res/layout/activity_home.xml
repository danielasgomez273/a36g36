<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Home">



    <!-- Contenedor principal de scroll -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Contenedor de 3 botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/textView_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/blackonedrop"
                    android:text="Bienvenido a"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_margin="10dp"

                    />

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginVertical="10dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/onedrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="Registrá y consultá tus valores de glucemia, peso y presión.
También guarda tus analisis clínicos y exporta los datos obtenidos hasta el momento en un archivo PDF
"
                        android:textAlignment="center"
                        android:textColor="@color/blackonedrop"
                        android:textSize="15dp" />





                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/boton_home_section_pink">
                    <Button
                        android:id="@+id/btnRGlucemia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/pinkonedrop2"
                        android:onClick="aRegistrarGlucemia"
                        android:text="Glucemia"
                        android:textColor="@color/white"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/boton_home_section_pink">
                    <Button
                        android:id="@+id/btnRAnalisis"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:backgroundTint="@color/pinkonedrop2"
                        android:onClick="toWeight"
                        android:text="Peso"
                        android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/boton_home_section_pink">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:backgroundTint="@color/pinkonedrop2"
                            android:onClick="toPressure"
                            android:text="Presion"
                            android:textColor="@color/white" />

                    </LinearLayout>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/boton_home_section_white">

                    <Button
                        android:id="@+id/btn_export_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"

                        android:onClick="btn_export_data"
                        android:text="Exportar Datos"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/blueonedrop"

                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/boton_home_section_pink">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/pinkonedrop2"
                            android:onClick="aRegistrarAnalisis"
                            android:text="Analisis"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                </LinearLayout>

                <!-- TIPS -->


                <WebView
                    android:id="@+id/web_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:gravity="center"
                    android:onClick="toContact"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"

                        android:text="CONTACTANOS"
                        android:textColor="@color/blueonedrop2"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginTop="10dp"
                            android:text="Si tenes algun problema con la aplicacion
o dudas con alguna de las funcionalidades.
No dudes en contactarnos"

                            android:textAlignment="center"

                            android:textSize="16sp" />

                        <!--
                        <Button


                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/baseline_help_outline_24" />
                    -->

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menu "nav" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@color/blueonedrop3"
        >




        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blueonedrop2"
            android:layoutDirection="locale"
            android:onClick="toProfile"
            android:text="Mi Perfil"
            android:textSize="13sp"
            android:padding="0dp"
            android:drawableTop="@drawable/baseline_account_circle_24"
            android:layout_gravity="center"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"

            />
        <Button
            android:id="@+id/button_logout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blueonedrop"
            android:layoutDirection="locale"
            android:onClick="logout"
            android:text="Cerrar Sesión"
            android:textSize="13sp"
            android:padding="0dp"
            android:drawableTop="@drawable/baseline_logout_24"
            android:layout_gravity="center"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            />

    </LinearLayout>


</LinearLayout>